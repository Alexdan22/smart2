<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Profile - Smart</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link href="assets/img/favicon.png" rel="icon">
  <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link href="https://fonts.gstatic.com" rel="preconnect">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="assets/vendor/quill/quill.snow.css" rel="stylesheet">
  <link href="assets/vendor/quill/quill.bubble.css" rel="stylesheet">
  <link href="assets/vendor/remixicon/remixicon.css" rel="stylesheet">
  <link href="assets/vendor/simple-datatables/style.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="assets/css/style.css" rel="stylesheet">

</head>

<body>

  <!-- ======= Header ======= -->
  <header id="header" class="header fixed-top d-flex align-items-center">

    <div class="d-flex align-items-center justify-content-between">
      <a href="/dashboard" class="logo d-flex align-items-center">
        <img src="assets/img/logo.png" alt="">
        <span class="d-none d-lg-block">Smart</span>
      </a>
      <i class="bi bi-list toggle-sidebar-btn"></i>
    </div><!-- End Logo -->

    <nav class="header-nav ms-auto">
      <ul class="d-flex align-items-center">






        <li class="nav-item dropdown pe-3">

          <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
            <img src="assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
            <span class="d-none d-md-block dropdown-toggle ps-2"><%= username %></span>
          </a><!-- End Profile Iamge Icon -->

          <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
            <li class="dropdown-header">
              <h6><%= username %></h6>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>

            <li>
              <a class="dropdown-item d-flex align-items-center" href="/profile">
                <i class="bi bi-person"></i>
                <span>My Profile</span>
              </a>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>

            <li>
              <a class="dropdown-item d-flex align-items-center" href="/profile">
                <i class="bi bi-gear"></i>
                <span>Account Settings</span>
              </a>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>

            <li>
              <hr class="dropdown-divider">
            </li>

            <li>
              <a class="dropdown-item d-flex align-items-center" href="/log-out">
                <i class="bi bi-box-arrow-right"></i>
                <span>Sign Out</span>
              </a>
            </li>

          </ul><!-- End Profile Dropdown Items -->
        </li><!-- End Profile Nav -->

      </ul>
    </nav><!-- End Icons Navigation -->

  </header><!-- End Header -->

  <!-- ======= Sidebar ======= -->
  <aside id="sidebar" class="sidebar">

    <ul class="sidebar-nav" id="sidebar-nav">

      <li>
        <div class="d-flex align-items-center justify-content-between">
          <a href="/dashboard" class="logo d-flex align-items-center">
            <span class="">Smart</span>
          </a>
        </div>
        <br>
      </li>

      <li class="nav-item">
        <a class="nav-link collapsed" href="/dashboard">
          <i class="bi bi-grid"></i>
          <span>Dashboard</span>
        </a>
      </li><!-- End Dashboard Nav -->


            <li class="nav-item">
              <a class="nav-link collapsed" href="/profile">
                <i class="bi bi-person"></i>
                <span>Profile</span>
              </a>
            </li><!-- End Profile Page Nav -->

            <li class="nav-item">
              <a class="nav-link collapsed" href="/payment">
                <i class="bi bi-cash-stack"></i>
                <span>ID activation </span>
              </a>
            </li>



            <li class="nav-item">
              <a class="nav-link collapsed" href="/shares">
                <i class="bi bi-cash-stack"></i>
                <span>Package Detail </span>
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link collapsed" href="/withdrawal">
                <i class="bi bi-wallet2"></i>
                <span>Withdrawal</span>
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link collapsed" href="/withdrawal">
                <i class="bi bi-person-lines-fill"></i>
                <span>Contact</span>
              </a>
            </li>


          </ul>

        </aside><!-- End Sidebar-->

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Profile</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
          <li class="breadcrumb-item">Users</li>
          <li class="breadcrumb-item active">Profile</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section profile">
      <div class="row">
        <div class="col-xl-4">

          <div class="card">
            <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

              <img src="assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
              <h2><%= username %> <i class="bi bi-patch-check text-primary"></i></h2>
              <div class="social-links mt-2">
                <a href="https://www.facebook.com/sharer/sharer.php?u=https://reliance-smart.onrender.com/register/<%= userID %>" class="facebook"><i class="bi bi-facebook"></i></a>
                <a href="https://twitter.com/intent/tweet?url=https://reliance-smart.onrender.com/register/<%= userID %>" class="twitter"><i class="bi bi-twitter"></i></a>
                <a href="https://api.whatsapp.com/send?text=https://reliance-smart.onrender.com/register/<%= userID %>" class="whatsapp"><i class="bi bi-whatsapp"></i></a>
              </div>
            </div>
          </div>

        </div>

        <div class="col-xl-8">

          <div class="card">
            <div class="card-body pt-3">
              <!-- Bordered Tabs -->
              <ul class="nav nav-tabs nav-tabs-bordered">

                <li class="nav-item">
                  <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
                </li>

                <li class="nav-item">
                  <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Bank Details</button>
                </li>

                <li class="nav-item">
                  <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-settings">Directs</button>
                </li>


              </ul>
              <div class="tab-content pt-2">

                <div class="tab-pane fade show active profile-overview" id="profile-overview">

                  <h5 class="card-title">Profile Details</h5>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label ">Full Name</div>
                    <div class="col-lg-9 col-md-8"> <%= name %> </div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Email</div>
                    <div class="col-lg-9 col-md-8"> <%= email %> </div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Your Sponsor</div>
                    <div class="col-lg-9 col-md-8"> <%= sponsorID %> </div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Country</div>
                    <div class="col-lg-9 col-md-8"> India </div>
                  </div>

                </div>

                <div class="tab-pane fade profile-edit pt-3" id="profile-edit">

                 <h6 class="card-title text-center">Personal Info</h6>



                  <div class="row">
                    <div class="col-lg-3 col-md-4 badge bg-light text-dark">Account Holder's Name</div>
                    <br>
                    <div class="col-lg-9 col-md-8 text-center text-primary "> <%= accountHoldersName %> </div>
                    <br>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 badge bg-light text-dark">Account Number</div>
                    <br>
                    <div class="col-lg-9 col-md-8 text-center text-primary "> <%= accountNumber %> </div>
                    <br>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 badge bg-light text-dark">Bank Name</div>
                    <br>
                    <div class="col-lg-9 col-md-8 text-center text-primary "> <%= bankName %> </div>
                    <br>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 badge bg-light text-dark">IFSC </div>
                    <br>
                    <div class="col-lg-9 col-md-8 text-center text-primary "> <%= ifsc %> </div>
                    <br>
                  </div>

                </div>

                <div class="tab-pane fade pt-3" id="profile-settings">
                    <div class="pagetitle">
                      <h1>Your Direct's information</h1>
                    </div><!-- End Page Title -->

                    <div class="card">
                      <div class="card-body">
                        <h5 class="card-title">User Info</h5>

                        <!-- Default Table -->
                        <table class="table">
                          <thead>
                            <tr>
                              <th scope="col">Name</th>
                              <th scope="col">Username</th>
                              <th>Active Points</th>
                            </tr>
                          </thead>
                          <tbody>
                <%    users.forEach(function(user){  %>
                          <tr>
                            <td scope="row"> <%= user.name %> </td>
                            <td scope="row"> <%= user.username %> </td>
                            <td scope="row"> <%= user.earnings.currentShare %> </td>
                          </tr>
                <%    }) %>
                          </tbody>
                        </table>
                        <!-- End Default Table Example -->
                      </div>
                    </div>


                </div>


              </div><!-- End Bordered Tabs -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <footer id="footer" class="footer">
    <div class="copyright">
      &copy; Copyright <strong><span>Smart</span></strong>. All Rights Reserved
    </div>

  </footer><!-- End Footer -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="assets/vendor/apexcharts/apexcharts.min.js"></script>
  <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="assets/vendor/chart.js/chart.min.js"></script>
  <script src="assets/vendor/echarts/echarts.min.js"></script>
  <script src="assets/vendor/quill/quill.min.js"></script>
  <script src="assets/vendor/simple-datatables/simple-datatables.js"></script>
  <script src="assets/vendor/tinymce/tinymce.min.js"></script>
  <script src="assets/vendor/php-email-form/validate.js"></script>

  <!-- Template Main JS File -->
  <script src="assets/js/main.js"></script>

</body>

</html>
